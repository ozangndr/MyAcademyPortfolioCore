@model Portfolio.Web.Entities.Project
@{
    ViewData["Title"] = "Proje Düzenle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <form asp-action="EditProject" method="post">
            <input type="hidden" asp-for="ProjectId" />

            <div class="row g-3">

                <div class="col-12">
                    <label class="form-label" asp-for="ProjectName">Proje Adı</label>
                    <input asp-for="ProjectName" class="form-control" placeholder="Proje adı girin" required />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label" asp-for="Description">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Proje açıklaması girin" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label" asp-for="ImageUrl">Görsel URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" required />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label" asp-for="GithubUrl">Github URL</label>
                    <input asp-for="GithubUrl" class="form-control" placeholder="https://github.com/username/project" required />
                    <span asp-validation-for="GithubUrl" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Kategori</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" required></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="col-12 mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> İptal
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>

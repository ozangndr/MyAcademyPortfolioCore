@model Testimonial
@{
    ViewData["Title"] = "Referans Düzenle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="TestimonialId" />

            <div class="row g-3">

                <div class="col-12">
                    <label class="form-label" asp-for="Name">Adı</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="İsim girin" required />
                </div>

                <div class="col-12">
                    <label class="form-label" asp-for="Title">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Başlık girin" required />
                </div>

                <div class="col-12">
                    <label class="form-label" asp-for="ImageUrl">Resim Url</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="https://example.com/image.jpg" required />
                </div>

                <div class="col-12">
                    <label class="form-label" asp-for="Comment">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Comment" placeholder="Kısa açıklama girin" required />
                </div>

                <div class="col-12">
                    <label class="form-label" asp-for="Review">Puan</label>
                    <select class="form-control" asp-for="Review" asp-items="ViewBag.ReviewList" required></select>
                </div>

                <div class="col-12 mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> İptal
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>

@model List<Testimonial>
@{
    ViewData["Title"] = "Referanslarım";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">    
    <a href="/Testimonial/CreateTestimonial" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Yeni Referans Oluştur
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body table-responsive">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width:5%;">#</th>
                    <th>Adı</th>
                    <th>Başlık</th>
                    <th>Resim</th>
                    <th>Açıklama</th>
                    <th>Puan</th>
                    <th style="width:20%;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                }
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td>
                            <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="width:75px; height:75px;" />
                        </td>
                        <td>@item.Comment</td>
                        <td>@item.Review</td>
                        <td>
                            <a href="/Testimonial/EditTestimonial/@item.TestimonialId" class="btn btn-sm btn-info me-2">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>
                            <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-sm btn-danger" onclick="return confirm('Bu referansı silmek istediğinize emin misiniz?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
   
    <a href="/Category/CreateCategory" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Yeni Kategori Oluştur
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width: 5%;">#</th>
                    <th>Kategori Adı</th>
                    <th style="width: 20%;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                }
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a href="/Category/EditCategory/@item.CategoryId" class="btn btn-sm btn-info me-2">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>
                            <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-sm btn-danger" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model About
@*
   burası hakkımda kısmı
*@
@{
    var birthDate = @Model.BirthDate;
    var today = DateTime.Today;

    int age = today.Year - birthDate.Year;

    if (birthDate.Date > today.AddYears(-age))
    {
        age--;
    }
}

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
        <p>Hakkımda Sayfam</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="~/Kelly-1.0.0/assets/img/Ben2.png" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.Title</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@Model.BirthDate.ToString("dd.MM.yyyy")</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Web Site:</strong> <span>@Model.WebSite</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@Model.PhoneNumber</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@Model.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Eğitim:</strong> <span>@Model.Graduation</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>

                            @if(@Model.IsAvailable==true)
                            {
                            <li><i class="bi bi-chevron-right"></i> <strong>İş Durumu:</strong> <span>Çalışıyor</span></li>
                            }
                            else
                            {
                            <li><i class="bi bi-chevron-right"></i> <strong>İş Durumu:</strong> <span>Çalışmaya Açık</span></li>
                            }
                           
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    @Model.Description
                </p>
            </div>
        </div>

    </div>

</section>
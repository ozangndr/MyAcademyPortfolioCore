
@*
   Burası Eğitim Ve deneyimler
*@

<section id="resume" class="resume section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Özgeçmiş</h2>
        <p>Eğitim Ve Deneyimlerim</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row">

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                

                <h3 class="resume-title">Eğitimlerim</h3>
                @foreach (var item in ViewBag.education)
                {
                    <div class="resume-item">
                        <h4>@item.Department</h4>
                        <h5>@item.StartYear - @item.EndYear</h5>
                        <p><em>@item.SchoolName</em></p>
                        <p>@item.Description</p>
                    </div>

                    <!-- Edn Resume Item -->
                }

            </div>

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                <h3 class="resume-title">Deneyimlerim</h3>
                @foreach (var item in ViewBag.experience)
                {
                    <div class="resume-item">
                        <h4>@item.Title</h4>
                        <h5>@item.StartYear - @item.EndYear</h5>
                        <p><em>@item.Company, @item.City </em></p>
                        <ul>
                            <li>@item.Description</li>
                            
                        </ul>
                    </div>

                    <!-- Edn Resume Item -->
                }               

            </div>

        </div>

    </div>

</section>